<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        	style="@style/SettingStyle"
            android:id="@+id/tvFuelShowed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="18dp"
            android:textSize="10sp"
            android:text="@string/str_set_fuelShowed" />

    <Spinner
        android:id="@+id/spFuelShowedSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvFuelShowed"
        android:layout_alignLeft="@+id/tvFuelShowed" />
    
</RelativeLayout>
